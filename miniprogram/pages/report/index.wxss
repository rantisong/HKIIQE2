.page {
  height: 100vh;
  box-sizing: border-box;
  padding: 24rpx 32rpx 48rpx;
  padding-bottom: calc(48rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(48rpx + env(safe-area-inset-bottom));
  background: #F7F7F7;
}

.score-card {
  padding: 64rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
}

.score-ring {
  width: 352rpx;
  height: 352rpx;
  border-radius: 50%;
  border: 24rpx solid #F2F2F2;
  border-top-color: #07C160;
  border-right-color: #07C160;
  transform: rotate(-45deg);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 48rpx;
}

.score-value {
  font-size: 88rpx;
  font-weight: bold;
  transform: rotate(45deg);
}

.score-label {
  font-size: 24rpx;
  color: #888;
  font-weight: bold;
  transform: rotate(45deg);
  margin-top: 8rpx;
}

.pass-badge {
  padding: 16rpx 48rpx;
  background: #07C160;
  color: #fff;
  font-size: 26rpx;
  font-weight: bold;
  border-radius: 48rpx;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.2);
}
.pass-badge.fail {
  background: #999;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  padding: 24rpx 32rpx;
}

.stat-item {
  background: #fff;
  border-radius: 32rpx;
  padding: 32rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.02);
}

.stat-label {
  font-size: 20rpx;
  color: #888;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #000;
}

.stat-value.success {
  color: #07C160;
}

.answer-overview {
  margin: 0 32rpx;
  padding: 48rpx;
  background: #fff;
  border-radius: 48rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.02);
}

.overview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 48rpx;
}

.overview-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #000;
}

.overview-hint {
  font-size: 20rpx;
  color: #888;
  font-weight: bold;
}

.answer-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 24rpx;
}

.answer-dot {
  aspect-ratio: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  border-radius: 24rpx;
}

.answer-dot.correct {
  background: #07C160;
  color: #fff;
}

.answer-dot.wrong {
  background: #B3261E;
  color: #fff;
}

.answer-dot.more {
  background: #f8fafc;
  color: #cbd5e1;
  border: 1rpx solid rgba(0,0,0,0.05);
}

.back-btn {
  margin-top: 80rpx;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #07C160;
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 32rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.2);
}
