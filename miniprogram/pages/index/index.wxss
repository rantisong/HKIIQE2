.page {
  height: 100vh;
  box-sizing: border-box;
  padding-bottom: calc(140rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
  background: #F8FAFC;
}

.header {
  padding: 32rpx 32rpx 24rpx;
}

.title {
  font-size: 56rpx;
  font-weight: bold;
  color: #000;
  display: block;
}

.subtitle {
  font-size: 30rpx;
  color: #888;
  margin-top: 16rpx;
  display: block;
}

.stats-card {
  margin: 0 32rpx 48rpx;
  padding: 40rpx 32rpx;
  background: linear-gradient(135deg, #07C160, #05964a);
  border-radius: 28rpx;
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.25);
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 60rpx;
}

.stats-label {
  font-size: 26rpx;
  opacity: 0.8;
  display: block;
}

.stats-value-row {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
}

.stats-value {
  font-size: 72rpx;
  font-weight: bold;
  line-height: 1;
}

.stats-unit {
  font-size: 28rpx;
  opacity: 0.7;
}

.stats-divider {
  height: 2rpx;
  background: rgba(255,255,255,0.2);
  margin-bottom: 48rpx;
}

.stats-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.stats-small {
  font-size: 22rpx;
  opacity: 0.6;
  display: block;
}

.stats-goal {
  font-size: 36rpx;
  font-weight: bold;
}

.progress-wrap {
  text-align: right;
}

.progress-bar {
  width: 160rpx;
  height: 12rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 6rpx;
  overflow: hidden;
  margin-top: 8rpx;
}

.progress-fill {
  height: 100%;
  background: #fff;
  border-radius: 6rpx;
}

.section {
  padding: 0 32rpx 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #000;
}

.section-link {
  font-size: 24rpx;
  font-weight: bold;
}

.paper-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.paper-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx;
  background: #fff;
  border-radius: 28rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
}

.paper-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex: 1;
  min-width: 0;
}

.paper-info {
  flex: 1;
  min-width: 0;
}

.paper-num {
  width: 96rpx;
  height: 96rpx;
  flex-shrink: 0;
  background: rgba(7, 193, 96, 0.12);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #07C160;
}

.paper-name-row {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.paper-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #000;
}

.paper-fullname {
  font-size: 22rpx;
  color: #888;
  flex: 1;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.paper-meta {
  font-size: 22rpx;
  color: #888;
  margin-top: 12rpx;
}

.paper-arrow {
  width: 80rpx;
  height: 80rpx;
  flex-shrink: 0;
  border-radius: 50%;
  background: rgba(7, 193, 96, 0.12);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #07C160;
}
