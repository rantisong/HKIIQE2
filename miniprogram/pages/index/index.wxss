.page {
  height: 100vh;
  box-sizing: border-box;
  padding-bottom: calc(140rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
  background: #F8FAFC;
}

.header {
  padding: 32rpx 32rpx 24rpx;
}

.title {
  font-size: 56rpx;
  font-weight: bold;
  color: #000;
  display: block;
}

.subtitle {
  font-size: 30rpx;
  color: #888;
  margin-top: 16rpx;
  display: block;
}

.section {
  padding: 0 32rpx 32rpx;
}

.paper-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.paper-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx;
  background: #fff;
  border-radius: 28rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
}

.paper-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex: 1;
  min-width: 0;
}

.paper-info {
  flex: 1;
  min-width: 0;
}

.paper-num {
  width: 96rpx;
  height: 96rpx;
  flex-shrink: 0;
  background: rgba(7, 193, 96, 0.12);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #07C160;
}

.paper-name-row {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.paper-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #000;
}

.paper-fullname {
  font-size: 22rpx;
  color: #888;
  flex: 1;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.paper-meta {
  font-size: 22rpx;
  color: #888;
  margin-top: 12rpx;
}

.paper-arrow {
  width: 80rpx;
  height: 80rpx;
  flex-shrink: 0;
  border-radius: 50%;
  background: rgba(7, 193, 96, 0.12);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #07C160;
}
