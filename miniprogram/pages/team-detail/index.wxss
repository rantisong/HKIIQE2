.page {
  height: 100vh;
  box-sizing: border-box;
  padding: 24rpx 32rpx 48rpx;
  padding-bottom: calc(48rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(48rpx + env(safe-area-inset-bottom));
  background: #F8FAFC;
}

.profile-card {
  padding: 48rpx;
  background: #fff;
  border-radius: 64rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.02);
}

.avatar {
  width: 192rpx;
  height: 192rpx;
  border-radius: 48rpx;
  background: rgba(7, 193, 96, 0.1);
  border: 4rpx solid rgba(7, 193, 96, 0.2);
  margin-bottom: 32rpx;
}

.name {
  font-size: 48rpx;
  font-weight: bold;
  color: #000;
  margin-bottom: 8rpx;
}

.title {
  font-size: 26rpx;
  color: #888;
  margin-bottom: 64rpx;
}

.stats-row {
  display: flex;
  width: 100%;
  justify-content: space-around;
  padding-top: 48rpx;
  border-top: 1rpx solid #f1f5f9;
}

.stat {
  text-align: center;
}

.stat-label {
  font-size: 20rpx;
  color: #94a3b8;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #000;
}
