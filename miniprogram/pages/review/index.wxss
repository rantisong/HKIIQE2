.page {
  height: 100vh;
  box-sizing: border-box;
  padding-bottom: calc(140rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
  background: #F7F7F7;
}

.header {
  padding: 32rpx 32rpx 24rpx;
  background: rgba(255,255,255,0.5);
}

.title {
  font-size: 56rpx;
  font-weight: bold;
  color: #000;
  display: block;
}

.subtitle {
  font-size: 30rpx;
  color: #888;
  margin-top: 8rpx;
  display: block;
}

.section {
  padding: 24rpx 32rpx 32rpx;
}

.section-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #000;
  margin-bottom: 48rpx;
  display: block;
}

.subject-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.subject-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  background: #fff;
  border-radius: 48rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.02);
}

.subject-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex: 1;
  min-width: 0;
}

.subject-info {
  flex: 1;
  min-width: 0;
}

.subject-num {
  width: 96rpx;
  height: 96rpx;
  flex-shrink: 0;
  background: rgba(7, 193, 96, 0.1);
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #07C160;
}

.subject-name-row {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
  min-width: 0;
}

.subject-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #000;
}

.subject-fullname {
  font-size: 24rpx;
  color: #888;
  flex: 1;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.subject-meta {
  font-size: 24rpx;
  color: #888;
  margin-top: 12rpx;
  display: block;
}

.subject-arrow {
  width: 80rpx;
  height: 80rpx;
  flex-shrink: 0;
  border-radius: 50%;
  background: rgba(7, 193, 96, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #07C160;
}
