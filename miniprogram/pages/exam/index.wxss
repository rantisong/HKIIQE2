.page {
  min-height: 100vh;
  height: 100vh;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  flex-shrink: 0;
}

.timer {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #666;
  font-size: 24rpx;
}

.timer-icon {
  font-size: 32rpx;
}

.progress-text {
  font-size: 26rpx;
  font-weight: bold;
}

.divider {
  color: rgba(0,0,0,0.1);
  margin: 0 8rpx;
}

.progress-bar {
  height: 4rpx;
  background: rgba(0,0,0,0.05);
}

.progress-fill {
  height: 100%;
  background: #07C160;
  transition: width 0.3s;
}

.scroll-wrapper {
  flex: 1;
  min-height: 0;
  position: relative;
  overflow: hidden;
}

.content {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  box-sizing: border-box;
  padding: 24rpx;
  padding-bottom: 200rpx;
}

.question-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a1a1a;
  line-height: 1.65;
  display: block;
  margin-bottom: 40rpx;
  word-wrap: break-word;
  word-break: break-word;
}

.options {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.options.locked .option {
  pointer-events: none;
}

.option {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  padding: 24rpx;
  border-radius: 28rpx;
  border: 2rpx solid rgba(0,0,0,0.05);
  min-height: 0;
}

.option.selected {
  border-color: #07C160;
  background: rgba(7, 193, 96, 0.06);
}

.option.correct {
  background: rgba(46, 125, 50, 0.08);
  border-color: #2E7D32;
}

.option.wrong {
  background: rgba(179, 38, 30, 0.08);
  border-color: #B3261E;
}

.option.dimmed .option-text,
.option.dimmed .option-circle {
  color: #cbd5e1 !important;
}

.option-circle {
  width: 56rpx;
  height: 56rpx;
  min-width: 56rpx;
  min-height: 56rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(0,0,0,0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  flex-shrink: 0;
  margin-top: 2rpx;
}

.option.correct .option-circle {
  background: #2E7D32;
  border-color: #2E7D32;
  color: #fff;
}

.option.wrong .option-circle {
  background: #B3261E;
  border-color: #B3261E;
  color: #fff;
}

.option-text {
  font-size: 28rpx;
  color: #666;
  flex: 1;
  min-width: 0;
  line-height: 1.5;
  word-wrap: break-word;
  word-break: break-word;
}

.option.correct .option-text,
.option.wrong .option-text {
  font-weight: bold;
}

.option.correct .option-text {
  color: #2E7D32;
}

.option.wrong .option-text {
  color: #B3261E;
}

.explanation {
  margin-top: 48rpx;
  padding-top: 40rpx;
  border-top: 1rpx solid #f1f5f9;
}

.explanation-header {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.explanation-title {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.explanation-icon {
  font-size: 40rpx;
}

.explanation-label {
  font-size: 30rpx;
  font-weight: bold;
  color: #000;
}

.correct-answer {
  font-size: 26rpx;
  font-weight: bold;
}

.explanation-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.7;
  display: block;
  margin-bottom: 32rpx;
  word-wrap: break-word;
  word-break: break-word;
}

.explanation-en {
  padding: 24rpx 28rpx;
  background: #f8faff;
  border-left: 6rpx solid rgba(7, 193, 96, 0.4);
  border-radius: 0 24rpx 24rpx 0;
  font-size: 26rpx;
  color: #555;
  font-style: italic;
  word-wrap: break-word;
  word-break: break-word;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx;
  padding-bottom: calc(24rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: #fff;
  border-top: 1rpx solid rgba(0,0,0,0.05);
  box-shadow: 0 -4rpx 16rpx rgba(0,0,0,0.04);
  display: flex;
  gap: 24rpx;
  flex-shrink: 0;
}

.btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  border-radius: 32rpx;
  border: none;
}

.btn.prev {
  background: #F2F5F8;
  color: #445;
}

.btn.prev[disabled] {
  opacity: 0.3;
}

.btn.next {
  flex: 1.5;
  background: #07C160;
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.2);
}

.btn.next[disabled] {
  opacity: 0.5;
  background: #a8d5b8;
}
