.page {
  height: 100vh;
  box-sizing: border-box;
  padding: 24rpx 32rpx 48rpx;
  padding-bottom: calc(48rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(48rpx + env(safe-area-inset-bottom));
  background: #F8FAFC;
}

.paper-header {
  margin-bottom: 24rpx;
  padding: 40rpx 32rpx;
  background: linear-gradient(135deg, #07C160, #05964a);
  border-radius: 28rpx;
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.25);
}

.paper-label {
  font-size: 22rpx;
  opacity: 0.7;
  display: block;
}

.paper-title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin: 8rpx 0 48rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.paper-stats {
  display: flex;
  justify-content: space-between;
}

.stat {
  text-align: center;
}

.stat-label {
  font-size: 20rpx;
  opacity: 0.6;
  display: block;
}

.stat-value {
  font-size: 34rpx;
  font-weight: bold;
}

.random-card {
  margin-bottom: 24rpx;
  padding: 32rpx;
  background: rgba(7, 193, 96, 0.06);
  border: 4rpx dashed rgba(7, 193, 96, 0.3);
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.random-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex: 1;
  min-width: 0;
}

.random-icon {
  width: 96rpx;
  height: 96rpx;
  flex-shrink: 0;
  background: #07C160;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.25);
}

.random-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #000;
  display: block;
}

.random-desc {
  font-size: 22rpx;
  color: #888;
  margin-top: 4rpx;
  display: block;
}

.arrow-btn {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: rgba(7, 193, 96, 0.12);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  color: #07C160;
  flex-shrink: 0;
}

.exam-list {
  padding: 0;
}

.list-title {
  font-size: 26rpx;
  color: #888;
  font-weight: bold;
  margin-bottom: 32rpx;
  display: block;
}

.exam-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  background: #fff;
  border-radius: 28rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
}

.exam-info {
  flex: 1;
  min-width: 0;
}

.exam-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
  display: block;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.exam-stats {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.exam-stat {
  font-size: 24rpx;
  color: #888;
}

