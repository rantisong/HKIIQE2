.page {
  min-height: 100vh;
  height: 100vh;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  padding-left: calc(24rpx + constant(safe-area-inset-left));
  padding-left: calc(24rpx + env(safe-area-inset-left));
  padding-right: calc(24rpx + constant(safe-area-inset-right));
  padding-right: calc(24rpx + env(safe-area-inset-right));
  flex-shrink: 0;
}

.mode-tag {
  font-size: 30rpx;
  font-weight: bold;
  color: #07C160;
}

.progress-text {
  font-size: 28rpx;
  font-weight: bold;
}

.progress-bar {
  height: 6rpx;
  background: #f8fafc;
}

.progress-fill {
  height: 100%;
  background: #07C160;
  transition: width 0.3s;
}

/* 滚动容器：必须明确高度，scroll-view 才能正常滚动 */
.scroll-wrapper {
  flex: 1;
  min-height: 0;
  position: relative;
  overflow: hidden;
}

.content {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100%;
  box-sizing: border-box;
}

.content-inner {
  padding: 24rpx;
  padding-left: calc(24rpx + constant(safe-area-inset-left));
  padding-left: calc(24rpx + env(safe-area-inset-left));
  padding-right: calc(24rpx + constant(safe-area-inset-right));
  padding-right: calc(24rpx + env(safe-area-inset-right));
  padding-bottom: 200rpx;
  min-height: 100%;
}

.question-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a1a1a;
  line-height: 1.7;
  display: block;
  margin-bottom: 40rpx;
  word-wrap: break-word;
  word-break: break-word;
  overflow-wrap: break-word;
  white-space: pre-wrap;
}

.options {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.option {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  padding: 24rpx;
  border-radius: 28rpx;
  border: 2rpx solid rgba(0,0,0,0.04);
  min-height: 0;
}

.option.correct {
  background: rgba(46, 125, 50, 0.08);
  border-color: #2E7D32;
}

.option.wrong {
  background: rgba(179, 38, 30, 0.08);
  border-color: #B3261E;
}

.option-circle {
  width: 56rpx;
  height: 56rpx;
  min-width: 56rpx;
  min-height: 56rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(0,0,0,0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  flex-shrink: 0;
  margin-top: 2rpx;
}

.option-circle.correct {
  background: #2E7D32;
  border-color: #2E7D32;
  color: #fff;
}

.option-circle.wrong {
  background: #B3261E;
  border-color: #B3261E;
  color: #fff;
}

.option-text {
  font-size: 28rpx;
  color: #666;
  flex: 1;
  min-width: 0;
  line-height: 1.6;
  word-wrap: break-word;
  word-break: break-word;
  overflow-wrap: break-word;
}

.option-text.correct {
  color: #2E7D32;
  font-weight: bold;
}

.option-text.wrong {
  color: #B3261E;
  font-weight: bold;
}

.explanation {
  margin-top: 48rpx;
  padding-top: 40rpx;
  border-top: 1rpx solid #f1f5f9;
}

.explanation-header {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.explanation-title {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.explanation-icon {
  font-size: 44rpx;
}

.explanation-label {
  font-size: 30rpx;
  font-weight: bold;
  color: #000;
}

.correct-answer {
  font-size: 26rpx;
  font-weight: bold;
}

.explanation-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.75;
  display: block;
  margin-bottom: 32rpx;
  word-wrap: break-word;
  word-break: break-word;
  overflow-wrap: break-word;
  white-space: pre-wrap;
}

.explanation-en {
  padding: 24rpx 28rpx;
  background: #f0f5ff;
  border-left: 6rpx solid rgba(59, 130, 246, 0.4);
  border-radius: 0 24rpx 24rpx 0;
  font-size: 26rpx;
  color: #445;
  font-style: italic;
  word-wrap: break-word;
  word-break: break-word;
  overflow-wrap: break-word;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx;
  padding-left: calc(24rpx + constant(safe-area-inset-left));
  padding-left: calc(24rpx + env(safe-area-inset-left));
  padding-right: calc(24rpx + constant(safe-area-inset-right));
  padding-right: calc(24rpx + env(safe-area-inset-right));
  padding-bottom: calc(24rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: #fff;
  border-top: 1rpx solid rgba(0,0,0,0.05);
  display: flex;
  gap: 24rpx;
  flex-shrink: 0;
}

.btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  border-radius: 32rpx;
  border: none;
}

.btn.prev {
  background: #f2f6fa;
  color: #445;
}

.btn.prev[disabled] {
  opacity: 0.3;
}

.btn.next {
  flex: 1.5;
  background: #07C160;
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.2);
}
